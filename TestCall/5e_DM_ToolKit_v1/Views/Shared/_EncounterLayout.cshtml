@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "GO Initiative Tracker";
}

@model EncounterViewModel
@using TeamAlpha.GoldenOracle.Models.ViewModels

<div id="encounter-list">
    <div>
        <h3>Encounter:</h3>
    </div>

    @if (Model != null && Model.EncounterCreatures != null)
    {
        foreach (var creature in Model.EncounterCreatures)
        {
            if (creature.isMonster == true)
            {

                @Html.ActionLink($"{creature.Initiative} - {@creature.Name}", "MonstersDetail", "Encounter", new { id = creature.ID, value = creature.isMonster }, new { @class = "btn" })
            }
            else
            {

                @Html.ActionLink($"{creature.Initiative} - {@creature.Name}", "MonstersDetail", "Encounter", new { id = creature.ID, value = creature.isMonster }, new { @class = "btn" })
            }
        }
        <br />
    }

        <div id="encounter-btns-div">
            @Html.ActionLink("Add Creature", "Index", "Add", null, new { @class = "encounter-btn" })
            @Html.ActionLink("Next Turn", "NextTurn", "Encounter", null, new { @class = "encounter-btn" })
        </div>
    </div>