@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<TeamAlpha.GoldenOracle.Models.Characters>

@{
    ViewBag.Title = "List";
}

<div class="go-container">
    <div></div>
    <div>
        <h2>Character List</h2>
        <p>
            @Html.ActionLink("Create New", "Index")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.Strength)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Race)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SubRaces)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Class)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.Dexterity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Constitution)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Intelligence)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Wisdom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Charisma)
                    </th>*@
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>

                        @{ string raceSelected = item.RaceSelection.GetDisplayName();
                        }
                        @Html.DisplayFor(modelItem => raceSelected)
                    </td>
                    <td>
                        @{ string subRaceSelected = item.SubRaceSelection.GetDisplayName();
                        }
                        @Html.DisplayFor(modelItem => subRaceSelected)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassSelection)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Dexterity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Constitution)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Intelligence)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Wisdom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Charisma)
                        </td>*@
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID })  |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID }) |
                        @Html.ActionLink("Add", "SendCharacter", new { name = item.Name })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>