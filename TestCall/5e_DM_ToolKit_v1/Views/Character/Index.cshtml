                        @Html.EditorFor(model => model.Strength, new { htmlAttributes = new { @class = "form-control", min = 0, max = 20 } })
                        @Html.ValidationMessageFor(model => model.Strength, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
