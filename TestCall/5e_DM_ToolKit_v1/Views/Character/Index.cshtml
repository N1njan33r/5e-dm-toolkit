                        @Html.ValidationMessageFor(model => model.Wisdom, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Charisma, htmlAttributes: new { @class = "control-label col-md-2" })
